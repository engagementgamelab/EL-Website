<!-- PROJECT DIRECTORY START -->
<!-- main-container start -->
<!-- ================ -->
<section class="main-container padding-bottom-clear">
	<div class="container">
		<!-- main start -->
		<!-- ================ -->
		<div class="main">
			<!-- page-title start -->
			<!-- ================ -->
			<h1 class="page-title">Publications</h1>
			<div class="separator-2"></div>
			<p class="lead">{{{category.description.html}}}</p>
			<!-- page-title end -->
		</div>
		<!-- main end -->
	</div>
</section>
<!-- main-container end -->
<!-- section start -->
<!-- ================ -->
<section>
	<div class="container">
		<div class="row grid-space-10">
			{{#if publications}}
			
				{{!-- Show publications --}}
				{{#each publications}}
				<h3>{{@key}}s</h3>
					{{jsonPrint this.sub_sections}}
					{{#if this.sub_sections}}
						<!-- filters start -->
						<div class="filters">
							<ul class="nav nav-pills">
								<li class="active"><a href="#" data-filter="*">All</a></li>
								{{!-- {{jsonPrint this.sub_sections}} --}}
								{{#each this.sub_sections}}
									<li><a href="#" data-filter=".{{trim @key}}-{{key}}">{{name}}</a></li>
								{{/each}}
							</ul>
						</div>
						<!-- filters end -->
					{{/if}}

					<div class="isotope-container row grid-space-0">
						{{#each this.records}}
							<div class="separator-2"></div>
							<div class="image-box style-3-b isotope-item {{trim category}}-{{subCategory.key}}">
								<div class="row">
									<div class="col-sm-6 col-md-3">
										<div class="overlay-container">
											<img src="{{{cloudinaryUrl image width=175 height=271}}}" alt="{{title}}">
										</div>
									</div>
									<div class="col-sm-6 col-md-7">
										<div class="body">
											<h3 class="title"><a href="portfolio-item.html">{{title}}</a></h3>
											<p class="small mb-10"><i class="icon-calendar"></i> 2014 {{author}}<i class="pl-10 icon-tag-1"></i> Books</p>
											<div class="separator-2"></div>
											<p class="mb-10"><strong>{{blurb}}</strong><br/> </p>
											<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#more_{{id}}" aria-expanded="false" aria-controls="collapseExample">Read More</button>
											<div class="collapse" id="more_{{id}}">
												<p>
													{{{description.html}}}
												</p>
											</div>
										</div>
									</div>
								</div>
							</div>
						{{/each}}
					</div>
					
				{{/each}}
			{{else}}
			
			<strong>No publications! Fiddlesticks!</strong>
			
			{{/if}}
		</div>

		</div>
	</section>
	<!-- section end -->