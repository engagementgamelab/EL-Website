<!-- main-container start -->
<!-- ================ -->
<section class="main-container padding-bottom-clear">
	<div class="container">
		<!-- main start -->
		<!-- ================ -->
		<div class="main">
			<!-- page-title start -->
			<!-- ================ -->
			<h1 class="page-title"><strong>Research: </strong>{{category.name}}</h1>
			<p class="lead">{{{category.description.html}}}</p>
			<!-- page-title end -->
		</div>
		<!-- main end -->
	</div>
</section>
<!-- main-container end -->
<!-- section start -->
<!-- ================ -->
<section>
	<div class="container">
		<div class="row grid-space-10">
			{{#if projects}}
				
				{{!-- Show projects --}}
				{{#each projects}}
						{{> project_preview project=this}}
				{{/each}}

			{{else}}
				
				<strong>No projects! Fiddlesticks!</strong>
			
			{{/if}}
		</div>
	</div>
</section>
<!-- section end -->