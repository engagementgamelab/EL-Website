<!-- NEWS START -->
<!-- banner start -->
<!-- ================ -->
<div class="banner border-clear light-translucent-bg" style="background-image:url('images/page-about-banner-2.jpg');">
	
	<div class="container">
		<div class="row">
			<div class="col-md-8 pv-20">
				<h2 class="title"><strong>News</strong></h2>
			</div>
		</div>
	</div>

</div>
<!-- banner end -->

<!-- main-container start -->
<!-- ================ -->
<section class="main-container">
	<div class="container">
		<div class="row">

			<!-- main start -->
			<!-- ================ -->
			<div class="main col-md-12">

				<!-- page-title start -->
				<!-- ================ -->
				<h1 class="page-title">Blog Feed</h1>
				<div class="separator-2 mb-20"></div>
				<!-- page-title end -->

				<div class="row">
					<div class="col-md-6">
					{{!-- blog start --}}
						{{#each blog}}

							<!-- blogpost start -->
							<article class="blogpost shadow light-gray-bg bordered object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
								<header>
									<h2><a href="blog-post.html">{{title}}</a></h2>
									<div class="post-info">
										<span class="post-date">
											<i class="icon-calendar"></i>
											<span class="day">{{date published format='DD'}}</span>
											<span class="month">{{date published format='MM YYYY'}}</span>
										</span>
										<span class="submitted"><i class="icon-user-1"></i> by <a href="#">{{author}}</a></span>
										<span class="comments"><i class="icon-chat"></i> <a href="#">22 comments</a></span>
									</div>
								</header>
								<div class="blogpost-content">
									<p>{{{content}}}</p>
								</div>
								<footer class="clearfix">
									<div class="tags pull-left"><i class="icon-tags"></i> <a href="#">tag 1</a>, <a href="#">tag 2</a>, <a href="#">long tag 3</a></div>
									<div class="link pull-right"><i class="icon-link"></i><a href="{{link}}">Read More</a></div>
								</footer>
							</article>
							<!-- blogpost end -->		

						{{/each}}
					{{!-- blog end --}}
					</div>

				
			</div>
			<!-- main end -->

		</div>
	</div>
</section>
<!-- main-container end -->