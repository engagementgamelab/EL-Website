{{!< default}}
{{!--
/**
* Engagement Lab Website
* Developed by Engagement Lab, 2015
* ==============
*
* About Page Template
* - See About model for fields
* - Use {{jsonPrint about}} to print entire json...DEBUG ONLY
* ==========
*/
--}}

<!-- ABOUT START -->
<!-- banner start -->
<!-- ================ -->
<div class="banner border-clear light-translucent-bg" style="background-image:url('images/page-about-banner-2.jpg');">
	<div class="container">
		<div class="row">
			<div class="col-md-8 pv-20">
				<h2 class="title"><strong>About</strong> The Engagement Lab</h2>
				<p>{{about.blurb}}</p>
			</div>
		</div>
	</div>
</div>
<!-- banner end -->
<!-- main-container start -->
<!-- ================ -->
<section class="main-container">
	<div class="container">
		<div class="row">
			<!-- main start -->
			<!-- ================ -->
			<div class="main col-md-12">
				<!-- page-title start -->
				<!-- ================ -->
				<h1 class="page-title">Our Mission</h1>
				<div class="separator-2 mb-20"></div>
				<!-- page-title end -->
				<div class="row">
					<div class="col-md-6">
						{{about.mission}}
					</div>
					<!-- sidebar start -->
					<!-- ================ -->
					<aside class="sidebar col-md-6">
						<div class="block clearfix">
							<div class="image">
								<img src="http://publicdomainarchive.com/wp-content/uploads/2015/03/public-domain-images-free-stock-photos-architecture-black-and-white-building-1000x667.jpg" alt="">
							</div>
						</div>
					</aside>
					<!-- sidebar end -->
				</div>
			</div>
			<!-- main end -->
		</div>
	</div>
	{{!-- PARTNERS start --}}
	<section class="section clearfix partners">
		<div class="container-fluid border-clear">
			<div class="row">
				<div class="col-md-12">
					<div class="container">
						<div class="row">
							<div class="col-md-12">
								<h1 class="page-title pv-20">Our Partners</h1>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
								<div class="owl-carousel content-slider-with-controls">
									{{#each partners}}
										{{> about/partner_info partner=this}}
									{{/each}}
								</div>
							</div>
						</div>
					</div>
					<div class="container pv-20">
						<div class="clients-container">
							<div class="clients">
								{{#each partners}}
									{{> about/partner_icon partner=this}}
								{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	{{!-- PARTNERS end --}}
</section>
<!-- main-container end -->
