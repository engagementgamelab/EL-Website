{{!< default}}
<!--====================BEGIN HOME==============-->
<div class="container-fluid">
	<div class="row">
		<!-- main start -->
		<!-- ================ -->
		<div class="main col-md-12 no-gutter">

			<section class="hidden-xs-sm">
				<div class="banner clearfix fullscreen">
					<!-- Video Background -->
					<div class="fullscreenvideo"
						data-autoplay="true"
						data-volume="mute"
						data-forceCover="1"
						data-aspectratio="16:9"
						data-forcerewind="on"
						style="z-index: 2;">
						{{!--  --}}
						<style>.embed-container { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 100%; height: auto; background:url(/images/home/video_load.gif) center center no-repeat; } .embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }</style>
						<div class='embed-container'><iframe src="https://player.vimeo.com/video/132559864?background=1&autoplay=1&loop=1" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></div>
					</div>
				</div>
				{{!-- <div class="overlay">
					<h1>This is an overlay</h1>
				</div> --}}
			</section>
			<!-- banner end -->
			<!--=====MAIN SLIDER WITH VIDEO/PHOTO BACKGROUND END====-->

			<!--=====MISSION STATEMENT/CALL TO ACTION BEGIN====-->
			<section class="section pv-40 clearfix">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<div class="call-to-action text-center">
								<div class="row">
									<div class="col-sm-6 col-sm-offset-3 pv-30">
										<h2 class="title">Mission Statement</h2>
										<h4>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Repellendus error pariatur deserunt laudantium nam, mollitia quas nihil inventore, quibusdam?</h4>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
			<!-- section end -->
			<!--=====MISSION STATEMENT/CALL TO ACTION BEGIN====-->

			<!--=====COUNTER BEGINS======-->
			<section class="pv-40 stats padding-bottom-clear dark-bg">
				<div class="clearfix">
					<div class="col-md-3 col-xs-6 text-center">
						<div class="feature-box object-non-visible" data-animation-effect="fadeIn" data-effect-delay="300">
							<span class="icon default-bg circle"><i class="fa fa-flask"></i></span>
							<h3><strong>Projects</strong></h3>
							<span class="counter" data-to="1525" data-speed="5000">0</span>
						</div>
					</div>
					<div class="col-md-3 col-xs-6 text-center">
						<div class="feature-box object-non-visible" data-animation-effect="fadeIn" data-effect-delay="300">
							<span class="icon default-bg circle"><i class="fa fa-users"></i></span>
							<h3><strong>Counters</strong></h3>
							<span class="counter" data-to="1225" data-speed="5000">0</span>
						</div>
					</div>
					<div class="col-md-3 col-xs-6 text-center">
						<div class="feature-box object-non-visible" data-animation-effect="fadeIn" data-effect-delay="300">
							<span class="icon default-bg circle"><i class="fa fa-cloud-download"></i></span>
							<h3><strong>Numbers</strong></h3>
							<span class="counter" data-to="12235" data-speed="5000">0</span>
						</div>
					</div>
					<div class="col-md-3 col-xs-6 text-center">
						<div class="feature-box object-non-visible" data-animation-effect="fadeIn" data-effect-delay="300">
							<span class="icon default-bg circle"><i class="fa fa-share"></i></span>
							<h3><strong>Animations</strong></h3>
							<span class="counter" data-to="15002" data-speed="5000">0</span>
						</div>
					</div>
				</div>
			</section>
			<div class="clearfix"></div>
			<!--Counter End-->

			<!-- Featured Projects, Events -->
				
			{{#if featured_projects}}
				<!--Projects Slider Begins-->
				<!-- ================ -->
				<div class="pv-40 banner">
					<div class="container clearfix">

						<!-- slideshow start -->
						<!-- ================ -->
						<div class="slideshow">
							
							<!-- slider revolution start -->
							<!-- ================ -->
							<div class="slider-banner-container">
								<div class="slider-banner-boxedwidth">
									<ul class="slides">
									
									{{#each featured_projects}}

										<!-- slide start -->
										<li data-transition="slide" data-slotamount="7" data-masterspeed="500" data-saveperformance="on" data-title="{{name}}">
											<!-- main image -->
											{{#if headerImage}}
												<img src="{{{cloudinaryUrl headerImage width=1140 height=450 quality=50}}}" alt="slidebg1" data-bgposition="center top" data-bgrepeat="no-repeat" data-bgfit="cover">
											{{/if}}

											<!-- Transparent Background -->
											<div class="tp-caption dark-translucent-bg"
												data-x="center"
												data-y="bottom"
												data-speed="600"
												data-start="0">
											</div>

											<!-- LAYER NR. 1 -->
											<div class="tp-caption sfb fadeout text-center large_white"
												data-x="left"
												data-y="110"
												data-speed="500"
												data-start="1000"
												data-easing="easeOutQuad">{{name}}
											</div>

											<!-- LAYER NR. 3 -->
											<div class="tp-caption sfb fadeout medium_white text-center hidden-xs"
												data-x="left"
												data-y="190"
												data-speed="500"
												data-start="1300"
												data-easing="easeOutQuad"
												data-endspeed="600">{{{overview.html}}}
											</div>
										</li>
										<!-- slide end -->

									{{/each}}
									</ul>
									<div class="tp-bannertimer"></div>
								</div>
							</div>
							<!-- slider revolution end -->

						</div>
						<!-- slideshow end -->

					</div>
				</div>
				<!--Projects Slider Ends-->
			{{/if}}

		</div>

	</div>
</div>