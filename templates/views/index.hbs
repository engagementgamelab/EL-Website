		<div class="pv-40 banner">
			<div class="container clearfix">

				<!-- slideshow start -->
				<!-- ================ -->
				<div class="slideshow">
					
					<!-- slider revolution start -->
					<!-- ================ -->
					<div class="slider-banner-container">
						<div class="slider-banner-boxedwidth">
							<ul class="slides">
							
							{{#each featured_projects}}

								<!-- slide start -->
								<li data-transition="random" data-slotamount="7" data-masterspeed="500" data-saveperformance="on" data-title="{{name}}">
									<!-- main image -->
									{{#if headerImage}}
										<img src="{{{cloudinaryUrl headerImage width=1140 height=450}}}" alt="slidebg1" data-bgposition="center top"  data-bgrepeat="no-repeat" data-bgfit="cover">
									{{/if}}

									<!-- Transparent Background -->
									<div class="tp-caption dark-translucent-bg"
